<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logingradient">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bannerconstraintstudentregister"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@drawable/roundcornerbackground"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/snackmatetextstudentregister"
                        android:layout_width="246dp"
                        android:layout_height="77dp"

                        android:fontFamily="@font/permanentmarker_regular"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:text="Snack'Mate"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="@+id/imagestudentregister"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/signup"
                        android:layout_width="202dp"
                        android:layout_height="59dp"
                        android:layout_marginStart="44dp"
                        android:outlineSpotShadowColor="@color/black"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:text="Sign Up"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp"

                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/logotextstudentregister"
                        app:layout_constraintStart_toStartOf="@+id/snackmatetextstudentregister"
                        app:layout_constraintTop_toBottomOf="@+id/snackmatetextstudentregister" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imagestudentregister"
                        android:layout_width="140dp"
                        android:layout_height="140dp"


                        android:backgroundTint="@android:color/transparent"

                        android:outlineSpotShadowColor="@android:color/transparent"
                        android:outlineAmbientShadowColor="@android:color/transparent"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/snackmatetextstudentregister"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.cardview.widget.CardView

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:outlineSpotShadowColor="@android:color/transparent"
                                    android:outlineAmbientShadowColor="@android:color/transparent"
                                        android:backgroundTint="@android:color/transparent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/photostudentregister"

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        app:civ_border_width="2dp"
                                        app:civ_border_color="@color/white"

                                        android:src="@drawable/studentprofileplaceholder"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.333"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"/>


                                </androidx.cardview.widget.CardView>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <ImageButton
                                android:id="@+id/photoeditstudentregister"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/editiconwhite"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"></ImageButton>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/logotextstudentregister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:text="Add Profile Photo"
                        android:textAlignment="center"

                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/imagestudentregister"
                        app:layout_constraintStart_toStartOf="@+id/imagestudentregister"
                        app:layout_constraintTop_toBottomOf="@+id/imagestudentregister"
                        app:layout_constraintVertical_bias="0.0"></TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/linearLayoutstudentregister"
                    android:layout_width="367dp"
                    android:layout_height="253dp"

                    android:layout_marginTop="56dp"
                    android:orientation="vertical"
                    android:padding="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bannerconstraintstudentregister"
                    tools:ignore="MissingConstraints">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="9dp"
                        android:background="@color/white"
                        app:cardCornerRadius="15dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imagenamestudentregister"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:alpha="0.2"
                                android:src="@drawable/nameicon"
                                app:layout_constraintBottom_toBottomOf="parent"

                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.053"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.6">

                            </ImageView>

                            <EditText
                                android:id="@+id/editusernamestudentregister"
                                android:layout_width="288dp"
                                android:layout_height="55dp"
                                android:background="@android:color/transparent"
                                android:ems="8"
                                android:hint="Username"
                                android:inputType="text"
                                android:padding="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/imagenamestudentregister"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.466" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="9dp"
                        android:background="@color/white"
                        app:cardCornerRadius="15dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageemailstudentregister"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:alpha="0.2"
                                android:src="@drawable/mail"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.053"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.6">

                            </ImageView>

                            <EditText
                                android:id="@+id/editemailstudentregister"
                                android:layout_width="288dp"
                                android:layout_height="55dp"
                                android:layout_marginEnd="16dp"
                                android:background="@android:color/transparent"
                                android:ems="8"
                                android:hint="Email or Phone No."
                                android:inputType="text"
                                android:padding="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/imageemailstudentregister"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.466" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="9dp"
                        android:background="@color/white"
                        app:cardCornerRadius="15dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imagepasswordstudentregister"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:alpha="0.2"
                                android:src="@drawable/passwordimage"
                                app:layout_constraintBottom_toBottomOf="parent"

                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.053"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                            </ImageView>

                            <EditText
                                android:id="@+id/editpasswordstudentregister"
                                android:layout_width="288dp"
                                android:layout_height="55dp"
                                android:layout_marginEnd="16dp"
                                android:background="@android:color/transparent"
                                android:ems="8"
                                android:hint="Password"
                                android:inputType="text"
                                android:padding="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/imagepasswordstudentregister"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.466" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewstudentregister"
                    android:layout_width="183dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:backgroundTint="@color/buttongreen"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutstudentregister">

                    <TextView
                        android:id="@+id/signuptextstudentregister"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="SIGN UP"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:shadowColor="@android:color/holo_purple"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:orientation="horizontal"


                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewstudentregister"
                    app:layout_constraintHorizontal_bias="0.906"
                    app:layout_constraintStart_toStartOf="@+id/cardViewstudentregister"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewstudentregister"
                    app:layout_constraintVertical_bias="1.0">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="62dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"


                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/alreadytextoutletregister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="Already registered?"
                            android:textAlignment="center"

                            android:textColor="@color/white"
                            android:textSize="15sp"

                            tools:layout_editor_absoluteX="44dp"
                            tools:layout_editor_absoluteY="44dp" />

                        <TextView
                            android:id="@+id/alreadylogintextoutletregister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginBottom="9dp"
                            android:text="Log in"
                            android:textAlignment="center"

                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="15sp"

                            tools:layout_editor_absoluteX="44dp"
                            tools:layout_editor_absoluteY="44dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>